{
  "name": "matrix-protocol",
  "version": "1.0.0",
  "description": "matrix protocol contracts",
  "main": "",
  "repository": {
    "type": "git",
    "url": "git+https://gitee.com/matrix-tech/MatrixProtocol"
  },
  "keywords": [
    "matrix",
    "protocol",
    "fund",
    "defi",
    "solidity",
    "ethereum",
    "smart contracts"
  ],
  "author": "Daniel Liu",
  "license": "MIT",
  "bugs": {
    "url": "https://gitee.com/matrix-tech/MatrixProtocol/issues",
    "email": "liudaniel@qq.com"
  },
  "homepage": "https://gitee.com/matrix-tech/MatrixProtocol#README",
  "engines": {
    "npm": "^8.1.0",
    "node": "^16.13.0",
    "yarn": "^1.22.17"
  },
  "scripts": {
    "clean": "rm -rf coverage.json coverage cache artifacts",
    "compile": "hardhat compile",
    "size": "mkdir -p deploy && hardhat size-contracts --no-compile > deploy/size.txt",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true yarn test",
    "coverage": "yarn clean && COVERAGE=true hardhat coverage",
    "make": "yarn clean && yarn compile && yarn test && yarn size",
    "deploy:kovan": "hardhat run --network kovan ./deploy/deploy.js",
    "deploy:mumbai": "hardhat run --network mumbai ./deploy/deploy.js",
    "deploy:polygon": "hardhat run --network polygon ./deploy/deploy.js",
    "verify:kovan": "hardhat run --network kovan ./deploy/verify.js",
    "verify:mumbai": "hardhat run --network mumbai ./deploy/verify.js",
    "verify:polygon": "hardhat run --network polygon ./deploy/verify.js",
    "build:kovan": "yarn make && yarn deploy:kovan && yarn verify:kovan",
    "build:mumbai": "yarn make && yarn deploy:mumbai && yarn verify:mumbai",
    "build:polygon": "yarn make && yarn deploy:polygon && yarn verify:polygon"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "chai": "^4.3.6",
    "dayjs": "^1.11.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.2",
    "hardhat": "^2.9.2",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "strip-ansi-cli": "^3.0.2",
    "web3": "^1.7.1"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.0",
    "@openzeppelin/contracts": "^4.5.0"
  }
}
